# 應用程式設定
APP_ENV=development
APP_PORT=8081
APP_NAME=auction_service

# JWT 設定
JWT_SECRET=your-jwt-secret-key-here
JWT_ISSUER=auction-service

# 資料庫設定
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=business_exchange_marketplace

# Redis 設定
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# 通知設定
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# 降級設定
DEGRADED_CPU_THRESHOLD=80
DEGRADED_REDIS_ERROR_THRESHOLD=5
DEGRADED_DB_LATENCY_THRESHOLD=500

# CORS 設定
CORS_ALLOWED_ORIGINS=http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Idempotency-Key